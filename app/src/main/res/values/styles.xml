    <!-- Style DatePickerDialog -->
    <style name="Dialog.LinkUp.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textColorPrimary">?textColorPrimary</item>
        <item name="android:textColorSecondary">?textColorSecondary</item>
    </style>

    <style name="InputChatContainer">
        <item name="android:background">@drawable/shape_input_chat_rounded</item>
    </style>

    <style name="Widget.Input.Chat" parent="android:Widget.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">@dimen/content_inset_half</item>
        <item name="android:paddingBottom">@dimen/content_inset_half</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">@dimen/content_inset_less</item>
        <item name="android:paddingRight">@dimen/content_inset_less</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:textSize">@dimen/dynamic_content_text_size</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textColorHint">?textColorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textDirection" tools:ignore="NewApi">locale</item>
        <item name="fontType">poppingRegular</item>
    </style>

