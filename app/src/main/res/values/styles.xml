        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Widget.Button.Body" parent="Widget.Button">
        <item name="android:paddingTop">@dimen/content_inset_half</item>
        <item name="android:paddingBottom">@dimen/content_inset_half</item>
        <item name="android:paddingLeft">@dimen/padding_button_rounded_fixed</item>
        <item name="android:paddingRight">@dimen/padding_button_rounded_fixed</item>
